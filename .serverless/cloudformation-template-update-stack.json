      }
    },
    "CreateProductLambdaFunctionQualifiedArn": {
      "Description": "Current Lambda function version",
      "Value": {
        "Ref": "CreateProductLambdaVersionkfatBns13fXubuDSCdP3ypI5nTbKrYk8cMVgTApHT4"
      },
      "Export": {
